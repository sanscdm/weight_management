// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Shop {
  id         String    @id @default(cuid())
  shopDomain String    @unique          
  accessToken String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  sessions   Session[]
  materials  Material[]
}


model Session {
  id            String    @id
  shop          String?   // Make the shop field optional
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  // Optional relation with SetNull on delete
  shopRef       Shop?    @relation(fields: [shop], references: [shopDomain], onDelete: SetNull)

  @@index([shop])
}



model Material {
  id             String            @id @default(cuid())
  shopDomain     String            
  materialName   String            
  totalWeight    Float             
  weightUnit     String            @default("kg") // Common units: kg, g, oz, lb
  runningBalance Float             
  threshold      Float?            
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  variants       MaterialVariant[]
  stockMovements StockMovement[]

  shop           Shop              @relation(fields: [shopDomain], references: [shopDomain])
}

model MaterialVariant {
  id                     String   @id @default(cuid())
  materialId             String   
  variantId              String   @unique 
  variantName            String   
  consumptionRequirement Float    
  unitWeightUnit         String   @default("kg")
  estimatedQuantity      Float?   
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  material               Material @relation(fields: [materialId], references: [id])
}

model StockMovement {
  id             String   @id @default(cuid())
  materialId     String   
  variantId      String?  
  type           String   
  quantityChange Float    
  remainingStock Float    
  orderId        String?  
  createdAt      DateTime @default(now())

  material       Material @relation(fields: [materialId], references: [id])

  @@index([materialId])
  @@index([orderId])
}
